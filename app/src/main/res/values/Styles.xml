<resources>
    <style name="Widget.App.Settings" parent="" />

    <style name="Widget.App.Settings.Root">
        <item name="android:orientation">horizontal</item>
        <item name="android:background">@color/stone_gray</item>
    </style>

    <style name="Widget.App.Settings.Sidebar">
        <item name="android:background">@color/stone_gray</item>
        <item name="android:padding">16dp</item>
        <item name="android:orientation">vertical</item>
        <item name="android:gravity">center_horizontal</item>
    </style>

    <style name="Widget.App.Settings.HeaderRow">
        <item name="android:orientation">horizontal</item>
        <item name="android:gravity">center_vertical</item>
    </style>

    <style name="Widget.App.Settings.Title">
        <item name="android:textStyle">bold</item>
        <item name="android:textColor">@color/forest_green</item>
        <item name="android:textSize">20sp</item>
    </style>

    <style name="Widget.App.Settings.BackButton" parent="@android:style/Widget.ImageButton">
        <item name="android:background">@android:color/transparent</item>
        <item name="android:tint">@color/forest_green</item>
        <item name="android:padding">8dp</item>
    </style>

    <style name="Widget.App.Settings.SectionItem" parent="Widget.MaterialComponents.Button.TextButton">
        <item name="android:textAllCaps">false</item>
        <item name="android:textColor">@color/charcoal</item>
        <item name="android:gravity">start|center_vertical</item>
        <item name="android:paddingLeft">0dp</item>
    </style>

    <style name="Widget.App.Settings.SectionItem.Active" parent="Widget.App.Settings.SectionItem">
        <item name="android:textStyle">bold</item>
        <item name="android:textColor">@color/leaf_green</item>
    </style>

    <style name="Widget.App.Button.Logout" parent="Widget.MaterialComponents.Button">
        <item name="android:textAllCaps">false</item>
        <item name="backgroundTint">@color/red</item>
        <item name="android:textColor">@color/white</item>
        <item name="cornerRadius">16dp</item>
    </style>
    <style name="CircleImage" parent="">
        <item name="cornerSize">50%</item>
    </style>
</resources>