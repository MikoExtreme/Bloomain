<?xml version="1.0" encoding="utf-8"?>
<shape xmlns:android="http://schemas.android.com/apk/res/android"
    android:shape="rectangle">

    <!-- Background color (Stone Gray) -->
    <solid android:color="#FFFFFF" />

    <!-- Rounded corners -->
    <corners android:radius="12dp" />

    <!-- Soft border -->
    <stroke
        android:width="1dp"
        android:color="#A9AEAD" /> <!-- Pebble Gray -->

    <!-- Inner padding for a softer feel -->
    <padding
        android:left="12dp"
        android:top="12dp"
        android:right="12dp"
        android:bottom="12dp" />

</shape>
