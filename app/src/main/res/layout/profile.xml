<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/light_earth_brown"
    android:id="@+id/profile">

    <!-- 1. SEÇÃO DA IMAGEM DE PERFIL (usando CardView para dar o efeito circular) -->
    <androidx.cardview.widget.CardView
        android:id="@+id/profileImageContainer"
        android:layout_width="120dp"
        android:layout_height="120dp"
        android:layout_marginTop="32dp"
        app:cardCornerRadius="60dp"
        app:cardElevation="4dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <ImageView
            android:id="@+id/profileImage"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:contentDescription="Imagem de Perfil do Utilizador"
            android:scaleType="centerCrop"
            android:src="@drawable/logo_oficial_bloomainv2"
            android:background="@drawable/circle_placeholder"/>

    </androidx.cardview.widget.CardView>

    <!-- 2. NOME E EMAIL -->
    <TextView
        android:id="@+id/usernameTextView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp"
        android:text="NomeDoUtilizador"
        android:textSize="24sp"
        android:textStyle="bold"
        android:textColor="#2F5D42"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/profileImageContainer" />

    <TextView
        android:id="@+id/emailTextView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="4dp"
        android:text="utilizador@email.com"
        android:textSize="16sp"
        android:textColor="#888888"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/usernameTextView" />

    <!-- 3. LISTA DE ITENS/OPÇÕES (RecyclerView) -->

    <!-- 4. BOTÃO DE EDIÇÃO (FAB) - Nativo do Material Design -->

    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/profileOptionsRecyclerView"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_marginTop="24dp"
        android:clipToPadding="false"
        android:paddingHorizontal="16dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintTop_toBottomOf="@id/emailTextView"
        app:layout_constraintVertical_bias="1.0"
        tools:layout_editor_absoluteX="0dp"
        tools:listitem="@layout/item_profile_option_native" />

    <com.google.android.material.floatingactionbutton.FloatingActionButton
        android:id="@+id/editProfileFab"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginEnd="24dp"
        android:layout_marginBottom="24dp"
        android:src="@android:drawable/ic_menu_edit"
        app:backgroundTint="#6BBF59"
        app:tint="@android:color/white"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent" />

</androidx.constraintlayout.widget.ConstraintLayout>