<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/root_settings"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="horizontal"
    tools:context=".ui.settings.SettingsActivity">

    <!-- SIDEBAR (lista de secções) -->
    <LinearLayout
        android:id="@+id/settings_sidebar"
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:layout_weight="0.3"
        android:orientation="vertical"
        android:padding="16dp"
        android:background="?attr/colorSurfaceVariant">

        <!-- Título -->
        <TextView
            android:id="@+id/tv_settings_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Definições"
            android:textAppearance="?attr/textAppearanceTitleLarge"
            android:textStyle="bold" />

        <!-- Espaço -->
        <View
            android:layout_width="match_parent"
            android:layout_height="24dp" />

        <!-- Botões / Itens de secção (podes trocar por RecyclerView) -->
        <TextView
            android:id="@+id/item_section_account"
            style="@style/Widget.MaterialComponents.Button.TextButton"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingVertical="8dp"
            android:text="Conta" />

        <TextView
            android:id="@+id/item_section_notifications"
            style="@style/Widget.MaterialComponents.Button.TextButton"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingVertical="8dp"
            android:text="Notificações" />

        <TextView
            android:id="@+id/item_section_appearance"
            style="@style/Widget.MaterialComponents.Button.TextButton"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingVertical="8dp"
            android:text="Aparência" />

        <TextView
            android:id="@+id/item_section_security"
            style="@style/Widget.MaterialComponents.Button.TextButton"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingVertical="8dp"
            android:text="Segurança &amp; Privacidade" />

        <TextView
            android:id="@+id/item_section_language"
            style="@style/Widget.MaterialComponents.Button.TextButton"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingVertical="8dp"
            android:text="Idioma &amp; Região" />

        <TextView
            android:id="@+id/item_section_about"
            style="@style/Widget.MaterialComponents.Button.TextButton"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingVertical="8dp"
            android:text="Sobre" />

    </LinearLayout>

</LinearLayout>
