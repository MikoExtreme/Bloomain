<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:paddingVertical="16dp"
    android:layout_marginBottom="8dp"
    android:background="@drawable/item_option_background"
    android:clickable="true"
    android:focusable="true">

    <ImageView
        android:id="@+id/optionIcon"
        android:layout_width="32dp"
        android:layout_height="32dp"
        android:layout_marginStart="16dp"
        android:src="@android:drawable/ic_menu_preferences"
        android:contentDescription="Ícone da Opção"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:tint="#2F5D42" />

    <TextView
        android:id="@+id/optionTitle"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="16dp"
        android:text="Título da Opção"
        android:textSize="18sp"
        android:textColor="#333333"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toStartOf="@+id/optionArrow"
        app:layout_constraintStart_toEndOf="@+id/optionIcon"
        app:layout_constraintTop_toTopOf="parent" />

    <ImageView
        android:id="@+id/optionArrow"
        android:layout_width="24dp"
        android:layout_height="24dp"
        android:layout_marginEnd="16dp"
        android:src="@android:drawable/ic_menu_send"
        android:rotation="180"
        android:contentDescription="Seta de Navegação"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:tint="#888888" />

</androidx.constraintlayout.widget.ConstraintLayout>